root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[makefile-local]
indent_style = tab

[*{py,rst,ini,json,sh}]
indent_style  = space
indent_size = 4

[*.{html,css,scss,js}]
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2
